<p id="notice"><%= notice %></p>

<h1>Todos</h1>


<div data-controller="drag" data-drag-url="/todos/:id/move">
  <% @todos.each do |todo| %>
    <div data-id="<%= todo.id %>" class="card card-body mb-3">
      <%= todo.description %>
    </div>
  <% end %>
</div>

<br>

<%= link_to 'New Todo', new_todo_path %>
