<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<% @posts.each do |post| %>
<div class="card card-body mb-3">
  <div>
    <%= post.description %>
    <%= link_to 'Show', post %>
    <%= link_to 'Edit', edit_post_path(post) %>
    <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
  </div>
</div>
<% end %>

<%= link_to 'New Post', new_post_path %>

